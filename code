class Main(App):
    def build(self):
        
        window_width, window_height = Window.size
        self.layout = GridLayout(cols=1, size_hint=(0.6, 0.7), pos_hint={"center_x": 0.5, "center_y": 0.5}) 
        self.layout.size_hint = (0.6, 0.7)
